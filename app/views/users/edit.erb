<form action="/users/<%= @user.id %>" method="post" accept-charset="utf-8">
    <label for="username">Username:</label>
    <input type="text" id="username" name="user[username]" value="<%= @user.username %>">
    <label for="real_name">Real Name:</label>
    <input type="text" id="real_name" name="user[real_name]" value="<%= @user.real_name %>">
    <label for="password">Password</label>
    <input type="password" id="password" name="user[password]" value="<%= @user.password %>">
    <input type="submit" name="" value="submit">
</form>